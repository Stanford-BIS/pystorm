<Renderer>:

<SliderRow@BoxLayout>:
    orientation: 'horizontal'
    slide_text: ""
    Label:
        text: root.slide_text
        text_size: (110, None)
        halign: 'left'
        size: (110, root.height)
        size_hint: (None, None)
    Slider:
        size_hint: (1., 1.)

<RootLayout>:
    orientation: 'vertical'
    renderer_widget: renderer_widget
    fade_slider: fade_slider
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            SliderRow:
                id: row_0
                slide_text: "DAC 0"
            SliderRow
                id: row_1
                slide_text: "DAC 1"
            SliderRow
                id: row_2
                slide_text: "DAC 2"
            SliderRow
                id: row_3
                slide_text: "DAC 3"
            SliderRow
                id: row_4
                slide_text: "DAC 4"
            SliderRow
                id: row_5
                slide_text: "DAC 5"
            SliderRow
                id: row_6
                slide_text: "DAC 6"
            SliderRow
                id: row_7
                slide_text: "DAC 7"
            SliderRow
                id: row_8
                slide_text: "DAC 8"
            SliderRow
                id: row_9
                slide_text: "DAC 9"
            SliderRow
                id: row_10
                slide_text: "DAC 10"
            SliderRow
                id: row_11
                slide_text: "DAC 11"
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: 'Sparkle'
                BoxLayout:
                    orientation: 'vertical'
                    Renderer:
                        id: renderer_widget
                        size_hint: (1., 1.)
                    BoxLayout:
                        orientation: 'horizontal'
                        size: (100., 50.)
                        size_hint: (0.3, None)
                        pos_hint: {'right': 1}
                        Label:
                            id: fade_value
                            text: ("%g (s)" % fade_slider.value)
                        Slider:
                            id: fade_slider
                            value: 0.1
                            min: 17e-3
                            max: 1.
                            step: 1e-3
                            value_track: True
                            on_value: root.update_fader(self.value)
            TabbedPanelItem:
                text: 'Raster'
