<ConsoleInput>:
    multiline: False
    cursor_width: 16

<ConsolePrompt>:
    orientation: 'horizontal'
    prompt_ps1: prompt_ps1
    prompt_input: prompt_input
    size: self.width, sp(28)
    size_hint: 1, None
    Label:
        id: prompt_ps1
        text: root.ps1_text
        color: (0, 1, 0, 1)
        markup: True
        halign: 'left'
        valign: 'middle'
        font_name: root.font_name
        font_size: root.font_size
        text_size: None, None
        size_hint: None, None
        width: self.texture_size[0]
        height: root.size[1]
        text_size: self.size
    ConsoleInput:
        id: prompt_input
        font_name: root.font_name
        font_size: root.font_size
        foreground_color: (1, 1, 1, 1)
        background_color: (0, 0, 0, 1)
        height: root.size[1]
        width: root.size[0] - prompt_ps1.width
        size_hint: None, None
        text_size: self.size

<KivyConsole>:
    console_input: console_input
    scroll_view: scroll_view
    ScrollView:
        id: scroll_view
        size_hint: (1, None)
        size: (root.width, root.height)
        bar_width: 20
        scroll_type: ['bars', 'content']
        BoxLayout:
            orientation: 'vertical'
            id: console_input
            size_hint_y: None
            height: max(scroll_view.height, self.minimum_height)
            font_name: root.font_name
            font_size: root.font_size
