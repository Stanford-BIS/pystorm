<Renderer>:

<SliderRow>:
    orientation: 'horizontal'
    slider_text: ""
    slider_name: ""
    slider_cb: None
    Label:
        text: root.slider_text
        text_size: (dp(100), None)
        halign: 'left'
        size: (dp(100), root.height)
        size_hint: (None, None)
        pos: (root.pos[0] + dp(10), self.pos[1])
        markup: True
    Slider:
        id: slider
        size_hint: (1., 1.)
        min: 1
        max: 1024
        value: 1
        step: 1
        value_track: True
        on_value: root.slider_cb(name=root.slider_name, value=self.value)
    TextInput:
        id: text
        multiline: False
        input_filter: 'int'
        text: '1'
        on_text_validate: root.update_slider(slider, self, self.text)
        size: 80, 50
        size_hint: (None, None)

<StencilBox@StencilView+BoxLayout>:

<RotatedLabel@Widget>:
    label_text: "Label"
    border_width: 100
    rot_angle: 90
    size_hint_x: None
    width: dp(40)
    Scatter:
        center: self.parent.center
        size: label.size
        do_rotation: False
        do_translation: False
        do_scale: False
        rotation: root.rot_angle
        Label:
            id: label
            markup: True
            text: ('[i]%s[/i]' % root.label_text)
            size: self.texture_size
            canvas:
                Color:
                    rgb: 1., 1., 1.
                Rectangle:
                    pos: label.size[0] / 2 - root.border_width / 2, 0
                    size: root.border_width, 1

<RootLayout>:
    orientation: 'vertical'
    renderer_box: renderer_box
    renderer_stencil: renderer_stencil
    renderer_scatter: renderer_scatter
    renderer_widget: renderer_widget
    fade_slider: fade_slider
    padding: dp(20)
    PageLayout:
        BoxLayout:
            orientation: 'horizontal'
            padding: 0, 0
            spacing: dp(20)
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(20)
                padding: 0, dp(20)
                GridLayout:
                    id: syn_grid
                    height: (root.ROW_HEIGHT * 6.)
                    size_hint_y: None
                    rows: 1
                    cols: 2
                    row_force_default: True
                    row_default_height: self.height
                    RotatedLabel:
                        label_text: "Synapse"
                        border_width: syn_grid.height
                    GridLayout:
                        rows: 6
                        row_force_default: True
                        row_default_height: root.ROW_HEIGHT
                        SliderRow:
                            id: syn_lk
                            slider_text: "Leak"
                            slider_name: "syn_lk"
                            slider_cb: root.update_bias
                        SliderRow:
                            id: syn_pu
                            slider_text: "PE PU"
                            slider_name: "syn_pu"
                            slider_cb: root.update_bias
                        SliderRow:
                            id: syn_pd
                            slider_text: "PE PD"
                            slider_name: "syn_pd"
                            slider_cb: root.update_bias
                        SliderRow:
                            id: syn_exc
                            slider_text: "Exc"
                            slider_name: "syn_exc"
                            slider_cb: root.update_bias
                        SliderRow:
                            id: syn_dc
                            slider_text: "DC"
                            slider_name: "syn_dc"
                            slider_cb: root.update_bias
                        SliderRow:
                            id: syn_inh
                            slider_text: "Inh"
                            slider_name: "syn_inh"
                            slider_cb: root.update_bias
                GridLayout:
                    id: diff_grid
                    height: (root.ROW_HEIGHT * 2.)
                    size_hint_y: None
                    rows: 1
                    cols: 2
                    row_force_default: True
                    row_default_height: self.height
                    RotatedLabel:
                        label_text: "Diffusor"
                        border_width: diff_grid.height
                    GridLayout:
                        rows: 2
                        row_force_default: True
                        row_default_height: root.ROW_HEIGHT
                        SliderRow:
                            id: diff_g
                            slider_text: "[i]Vert[/i] G"
                            slider_name: "diff_g"
                            slider_cb: root.update_bias
                        SliderRow:
                            id: soma_ref
                            slider_text: "[i]Hor[/i] R"
                            slider_name: "diff_r"
                            slider_cb: root.update_bias
                GridLayout:
                    id: soma_grid
                    height: (root.ROW_HEIGHT * 2.)
                    size_hint_y: None
                    rows: 1
                    cols: 2
                    row_force_default: True
                    row_default_height: self.height
                    RotatedLabel:
                        label_text: "Soma"
                        border_width: soma_grid.height
                    GridLayout:
                        rows: 2
                        row_force_default: True
                        row_default_height: root.ROW_HEIGHT
                        SliderRow:
                            id: soma_off
                            slider_text: "Offset"
                            slider_name: "soma_off"
                            slider_cb: root.update_bias
                        SliderRow:
                            id: soma_ref
                            slider_text: "Ref"
                            slider_name: "soma_ref"
                            slider_cb: root.update_bias
                Widget:
            BoxLayout:
                TabbedPanel:
                    do_default_tab: False
                    TabbedPanelItem:
                        text: 'Sparkle'
                        BoxLayout:
                            orientation: 'vertical'
                            id: renderer_box
                            StencilBox:
                                id: renderer_stencil
                                size_hint: (1., 1.)
                                Scatter:
                                    id: renderer_scatter
                                    do_rotation: False
                                    auto_bring_to_front: True
                                    size_hint: (1., 1.)
                                    Renderer:
                                        id: renderer_widget
                                        size_hint: (1., 1.)
                                        size: renderer_stencil.size
                            BoxLayout:
                                orientation: 'horizontal'
                                size: (dp(100.), dp(50.))
                                size_hint: (0.5, None)
                                pos_hint: {'right': 1}
                                Button:
                                    text: "Reset"
                                    on_release: root.reset_raster()
                                Label:
                                    id: fade_value
                                    text: ("%g (s)" % fade_slider.value)
                                Slider:
                                    id: fade_slider
                                    value: 0.1
                                    min: 17e-3
                                    max: 1.
                                    step: 1e-3
                                    value_track: True
                                    on_value: root.update_fader(self.value)
                    TabbedPanelItem:
                        text: 'Raster'

<MainScreen>:
    main_area : main_area
    RootLayout:
        id: main_area
